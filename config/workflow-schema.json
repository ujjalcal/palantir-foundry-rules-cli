{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Configuration Schema",
  "description": "Schema for proposal-cli-v2 workflow configuration files",
  "type": "object",
  "required": ["version", "workflow", "foundry", "sdk", "validation", "conventions"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Config file version (semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "workflow": {
      "$ref": "#/definitions/workflowDefinition"
    },
    "foundry": {
      "$ref": "#/definitions/foundryConnection"
    },
    "sdk": {
      "$ref": "#/definitions/sdkConfig"
    },
    "validation": {
      "$ref": "#/definitions/validationConfig"
    },
    "conventions": {
      "$ref": "#/definitions/conventionConfig"
    },
    "templates": {
      "type": "array",
      "items": { "$ref": "#/definitions/templateConfig" }
    }
  },
  "definitions": {
    "workflowDefinition": {
      "type": "object",
      "required": ["name", "workflowRid", "objectType", "output"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable workflow name"
        },
        "workflowRid": {
          "type": "string",
          "description": "Foundry workflow RID",
          "pattern": "^ri\\.taurus\\.main\\.workflow\\.[a-f0-9-]+$"
        },
        "objectType": {
          "$ref": "#/definitions/objectTypeConfig"
        },
        "output": {
          "$ref": "#/definitions/outputConfig"
        }
      }
    },
    "objectTypeConfig": {
      "type": "object",
      "required": ["id", "properties"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Object type API name (namespace.object-name)"
        },
        "dynamicLookup": {
          "type": "boolean",
          "default": false,
          "description": "Whether to fetch properties from Foundry API at runtime"
        },
        "properties": {
          "type": "array",
          "items": { "$ref": "#/definitions/propertyDefinition" },
          "minItems": 1
        }
      }
    },
    "propertyDefinition": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Property API name"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "date", "timestamp"]
        },
        "description": {
          "type": "string"
        },
        "nullable": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "outputConfig": {
      "type": "object",
      "required": ["id", "version"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Output node UUID"
        },
        "version": {
          "type": "string",
          "default": "0.1.0"
        },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/outputParameterConfig" }
        }
      }
    },
    "outputParameterConfig": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean"]
        },
        "defaultValue": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" }
          ]
        }
      }
    },
    "foundryConnection": {
      "type": "object",
      "required": ["url", "ontologyRid", "tokenEnvVar"],
      "properties": {
        "url": {
          "type": "string",
          "description": "Foundry URL (supports ${ENV_VAR} syntax)"
        },
        "ontologyRid": {
          "type": "string",
          "description": "Ontology RID (supports ${ENV_VAR} syntax)"
        },
        "tokenEnvVar": {
          "type": "string",
          "description": "Name of environment variable containing Foundry token"
        }
      }
    },
    "sdkConfig": {
      "type": "object",
      "required": ["packageName", "archetypes", "actions"],
      "properties": {
        "packageName": {
          "type": "string",
          "description": "NPM package name for OSDK"
        },
        "archetypes": {
          "$ref": "#/definitions/archetypeConfig"
        },
        "actions": {
          "$ref": "#/definitions/actionConfig"
        }
      }
    },
    "archetypeConfig": {
      "type": "object",
      "required": ["proposal", "rule"],
      "properties": {
        "proposal": {
          "type": "string",
          "description": "Proposal archetype export name"
        },
        "rule": {
          "type": "string",
          "description": "Rule archetype export name"
        }
      }
    },
    "actionConfig": {
      "type": "object",
      "required": ["createProposal", "approveProposal", "rejectProposal", "editProposal"],
      "properties": {
        "createProposal": {
          "type": "string"
        },
        "approveProposal": {
          "type": "string"
        },
        "rejectProposal": {
          "type": "string"
        },
        "editProposal": {
          "type": "string"
        }
      }
    },
    "validationConfig": {
      "type": "object",
      "required": ["grammarVersion", "supportedStrategyTypes", "supportedStringFilters"],
      "properties": {
        "grammarVersion": {
          "type": "string",
          "enum": ["V1"]
        },
        "supportedStrategyTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["filterNode", "windowNode", "aggregationNode"]
          },
          "minItems": 1
        },
        "supportedStringFilters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["EQUALS", "CONTAINS", "MATCHES", "EQUALS_WITH_WILDCARDS"]
          }
        },
        "unsupportedStringFilters": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "supportedNumericFilters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["EQUALS", "GREATER_THAN", "LESS_THAN", "GREATER_THAN_OR_EQUAL", "LESS_THAN_OR_EQUAL"]
          }
        },
        "supportedNullFilters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["NULL", "NOT_NULL"]
          }
        }
      }
    },
    "conventionConfig": {
      "type": "object",
      "required": ["proposalIdPrefix", "ruleIdPrefix", "defaultAuthor"],
      "properties": {
        "proposalIdPrefix": {
          "type": "string",
          "description": "Prefix for generated proposal IDs"
        },
        "ruleIdPrefix": {
          "type": "string",
          "description": "Prefix for generated rule IDs"
        },
        "defaultAuthor": {
          "type": "string",
          "description": "Default author name for proposals"
        },
        "defaultDescription": {
          "type": "string"
        },
        "defaultKeywords": {
          "type": "string"
        }
      }
    },
    "templateConfig": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Template name (used in CLI)"
        },
        "description": {
          "type": "string"
        },
        "file": {
          "type": "string",
          "description": "Path to external template file"
        },
        "inline": {
          "$ref": "#/definitions/inlineTemplateConfig"
        }
      }
    },
    "inlineTemplateConfig": {
      "type": "object",
      "required": ["propertyId", "comparison"],
      "properties": {
        "propertyId": {
          "type": "string"
        },
        "comparison": {
          "type": "string"
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" }
          ]
        },
        "values": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" }
            ]
          }
        }
      }
    }
  }
}
